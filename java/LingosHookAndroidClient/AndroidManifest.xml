<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jie.java.android.lingoshook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/lac"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".LingosHookAndroidClientActivity" android:launchMode="standard">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="WordDisplayActivity" android:launchMode="singleTop"></activity>
        <activity android:name="ResultDisplayActivity" android:launchMode="singleInstance"></activity>
        <activity android:name="ScoreListActivity"></activity>
        <activity android:name="SettingActivity"></activity>
    </application>

</manifest>